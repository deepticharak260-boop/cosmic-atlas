<script>
// KEPLER ORBIT SIMULATION
const orbit = document.getElementById("orbit");
const octx = orbit.getContext("2d");
let angle = 0;

function drawOrbit() {
    octx.clearRect(0,0,400,400);
    octx.fillStyle = "yellow";
    octx.beginPath();
    octx.arc(200,200,10,0,Math.PI*2);
    octx.fill();

    const x = 200 + 120 * Math.cos(angle);
    const y = 200 + 120 * Math.sin(angle);

    octx.fillStyle = "#00d4ff";
    octx.beginPath();
    octx.arc(x,y,8,0,Math.PI*2);
    octx.fill();

    angle += 0.01;
    requestAnimationFrame(drawOrbit);
}
drawOrbit();

// BLACK HOLE SIMULATION
const bh = document.getElementById("bh");
const bctx = bh.getContext("2d");
let stars = Array.from({length:50},()=>({
    x:Math.random()*400,
    y:Math.random()*300
}));

function drawBH(){
    bctx.clearRect(0,0,400,300);
    bctx.fillStyle="black";
    bctx.fillRect(0,0,400,300);

    bctx.fillStyle="purple";
    bctx.beginPath();
    bctx.arc(200,150,20,0,Math.PI*2);
    bctx.fill();

    stars.forEach(s=>{
        s.x += (200 - s.x) * 0.01;
        s.y += (150 - s.y) * 0.01;
        bctx.fillStyle="white";
        bctx.fillRect(s.x,s.y,2,2);
    });

    requestAnimationFrame(drawBH);
}
drawBH();

// ROCKET SIMULATION
const rocketCanvas = document.getElementById("rocket");
const rctx = rocketCanvas.getContext("2d");
let ry = 350;

function launch(){
    function animate(){
        rctx.clearRect(0,0,200,400);
        rctx.fillStyle="white";
        rctx.fillRect(90,ry,20,40);
        rctx.fillStyle="orange";
        rctx.fillRect(95,ry+40,10,10);
        ry -= 2;
        if(ry > -50) requestAnimationFrame(animate);
    }
    animate();
}
</script>

